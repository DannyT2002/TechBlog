{{> header}}

<main>
  <article>
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <small>Posted by {{user.username}}</small>
  </article>
  <section class="comments">
    <h3>Comments</h3>
    <ul>
      {{#each comments}}
      <li>
        <p>{{this.content}}</p>
        <small>Comment by {{this.user.username}}</small>
      </li>
      {{/each}}
    </ul>
    {{#if loggedIn}}
    <form class="comment-form">
      <textarea id="comment-content" placeholder="Add a comment"></textarea>
      <button type="submit">Submit</button>
    </form>
    {{/if}}
  </section>
</main>

{{> footer}}
